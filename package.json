{
  "name": "@rutan/frame-tween",
  "version": "0.6.0",
  "description": "A simple tween animation for fixed frame rate games",
  "keywords": [
    "tween",
    "animation"
  ],
  "author": "rutan",
  "license": "WTFPL",
  "homepage": "https://github.com/rutan/frame-tween",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rutan/frame-tween"
  },
  "publishConfig": {
    "access": "public"
  },
  "type": "module",
  "engines": {
    "node": ">=16.12.0"
  },
  "main": "./cjs/index.cjs",
  "types": "./cjs/index.d.ts",
  "module": "./mjs/index.mjs",
  "exports": {
    "./package.json": "./package.json",
    "./*": {
      "node": {
        "import": {
          "types": "./mjs/*.d.ts",
          "default": "./mjs/*.mjs"
        },
        "require": {
          "types": "./cjs/*.d.ts",
          "default": "./cjs/*.cjs"
        }
      }
    },
    ".": {
      "node": {
        "import": {
          "types": "./mjs/index.d.ts",
          "default": "./mjs/index.mjs"
        },
        "require": {
          "types": "./cjs/index.d.ts",
          "default": "./cjs/index.cjs"
        }
      }
    }
  },
  "files": [
    "cjs/**/*",
    "mjs/**/*",
    "src/**/*"
  ],
  "directories": {
    "test": "test"
  },
  "scripts": {
    "build": "run-s lint test clean build:* validate",
    "build:packemon": "packemon build --addEngines --addExports --addFiles --declaration",
    "validate": "packemon validate",
    "lint": "run-s lint:*",
    "lint:prettier": "prettier -c .",
    "lint:ts": "tsc --noEmit",
    "test": "jest",
    "format": "prettier -w .",
    "clean": "run-p clean:*",
    "clean:packemon": "packemon clean",
    "clean:cjs": "rimraf ./cjs",
    "clean:mjs": "rimraf ./mjs",
    "prepare": "husky install",
    "precommit": "npm run lint && npm run test"
  },
  "devDependencies": {
    "@types/jest": "^29.5.4",
    "@types/node": "^20.6.0",
    "cross-env": "^7.0.3",
    "husky": "^8.0.3",
    "jest": "^29.6.4",
    "npm-run-all": "^4.1.5",
    "packemon": "^3.2.1",
    "prettier": "^3.0.3",
    "rimraf": "^5.0.1",
    "ts-jest": "^29.1.1",
    "ts-jest-resolver": "^2.0.1",
    "typescript": "^5.2.2"
  },
  "packemon": {
    "inputs": {
      "index": "./src/index.ts"
    },
    "platform": "node",
    "support": "stable",
    "format": [
      "cjs",
      "mjs"
    ]
  }
}
